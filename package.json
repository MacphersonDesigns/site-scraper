{
  "name": "site-scraper",
  "version": "1.0.0",
  "description": "A comprehensive website crawling and documentation tool that captures screenshots, extracts content, and identifies technology stacks.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "site-scraper": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "web-scraper",
    "crawler",
    "screenshot",
    "website-documentation",
    "technology-detection",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
